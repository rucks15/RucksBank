@model IEnumerable<sapphire.Account>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Balance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccountName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Balance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountType)
        </td>
        <td>
            @Html.ActionLink("Deposit", "Deposit", new { id = item.AccountNumber }) |
            @Html.ActionLink("Withdraw", "Withdraw", new { id = item.AccountNumber }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.AccountNumber }) |
            @Html.ActionLink("Details", "Details", new { id=item.AccountNumber }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AccountNumber })
        </td>
    </tr>
}

</table>
